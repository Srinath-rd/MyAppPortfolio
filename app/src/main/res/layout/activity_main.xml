<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffdfeaf1"
    android:useDefaultMargins="true"
    android:alignmentMode="alignBounds"
    android:columnOrderPreserved="false"
    android:columnCount="4">

    <TextView android:id="@+id/myNanApps"
        android:text="My Nanodegree Apps!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="4"
        android:layout_gravity="center_horizontal"
        android:textSize="24sp"/>

    <View
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/separator1"
        android:visibility="visible"
        android:layout_below="@+id/myNanApps"
        android:background="#ffdfeaf1"/>


    <Button android:id="@+id/streamButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:layout_below="@+id/separator1"
        android:background="#F08C35"
        android:textSize="14sp"
        android:onClick="sendMessage"/>

    <View
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/separator2"
        android:visibility="visible"
        android:layout_below="@+id/streamButton"
        android:background="#ffdfeaf1"/>

    <Button  android:id="@+id/scoresApp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:layout_below="@+id/separator2"
        android:background="#F08C35"
        android:textSize="14sp"
        android:onClick="sendMessage1"/>

    <View
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/separator3"
        android:visibility="visible"
        android:layout_below="@+id/scoresApp"
        android:background="#ffdfeaf1"/>


    <Button  android:id="@+id/libraryApp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:layout_below="@+id/separator3"
        android:background="#F08C35"
        android:textSize="14sp"
        android:onClick="sendMessage2"/>

    <View
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/separator4"
        android:visibility="visible"
        android:layout_below="@+id/libraryApp"
        android:background="#ffdfeaf1"/>

    <Button android:id="@+id/buildItBigger"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:layout_below="@+id/separator4"
        android:background="#F08C35"
        android:textSize="14sp"
        android:onClick="sendMessage3"/>

    <View
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/separator5"
        android:visibility="visible"
        android:layout_below="@+id/buildItBigger"
        android:background="#ffdfeaf1"/>

    <Button android:id="@+id/xyzReader"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:layout_below="@+id/separator5"
        android:background="#F08C35"
        android:textSize="14sp"
        android:onClick="sendMessage4"/>

    <View
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/separator6"
        android:visibility="visible"
        android:layout_below="@+id/xyzReader"
        android:background="#ffdfeaf1"/>

    <Button android:id="@+id/capStone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="CAPSTONE:MY OWN APP"
        android:layout_below="@+id/separator6"
        android:background="@android:color/holo_red_dark"
        android:textSize="14sp"
        android:onClick="sendMessage5"/>
</RelativeLayout>
